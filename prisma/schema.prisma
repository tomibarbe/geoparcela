generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parcels   Parcel[]
}

model Parcel {
  id          String   @id @default(cuid())
  name        String
  description String?
  coordinates Json     // Store GeoJSON data
  area        Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  files       File[]
}

model File {
  id        String   @id @default(cuid())
  name      String
  type      String
  size      Int
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parcelId  String
  parcel    Parcel   @relation(fields: [parcelId], references: [id])
}
